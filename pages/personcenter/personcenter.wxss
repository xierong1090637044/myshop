.g-bda-userinfo {
  width: 100%;
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  background: #00BBFF;
  position: relative;
}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  margin-top: 8px;
  margin-bottom: 8rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}
.userinfo-nickname{
  font-size: 12px;
  text-align: center;
  color: #fff;
  width: 35%;
  text-overflow:hidden;
  margin-top: 10px;
  margin-bottom: 5px;
  font-weight: bold;
}
.weather
{
  float:right;
  position: absolute;
  top: 29rpx;
  right:13rpx;
  font-size: 29rpx;
}
.userpic
{
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  margin-top: 8px;
  margin-bottom: 8rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}
.list
{
  width: 100%;
  margin-top: 15vh;
  text-align: center;
}
.contact_us
{
  width: 50%;
  height: 55rpx;
  margin-left: 25%;
  border-bottom: 1px solid #000;
}
.about_us
{
  width: 50%;
  height: 55rpx;
  margin-left: 25%;
  border-bottom: 1px solid #000;
  margin-top: 80rpx;
}
.userdata
{
  display: none;
  text-align: center;  
  position: absolute;  
  top: 30%;
  left: 15%;
  width: 70%;  
  height: 23%;  
  padding: 8px;  
  border: 2px solid #e8e9f7;  
  background-color: white;  
  z-index: 1002;  
  border-radius: 4px;
}
.bg {  
  display: none;
  position: absolute;  
  top: 0%;  
  left: 0%;  
  width: 100%;  
  height: 100%;  
  background-color: black;  
  z-index: 1001;  
  -moz-opacity: 0.7;  
  opacity: 0.70;  
  filter: alpha(opacity=70);  
}
.button
{
  font-size: 13px;
  width: 40%;
  display: inline-block;
  margin-right: 8px;
  margin-left: 8px;
  margin-top:50px;
  border-radius: 4px;
  color: #fff;
  background: #00ff99 !important;
}
.userinfor{
  padding-top: 10px;
}

